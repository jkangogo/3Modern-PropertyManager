<LinearLayout
android:id="@+id/linearUnits"
xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
			>
<TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"  
			android:stretchColumns="*" 
			android:background="#000000"
			android:id="@+id/utablelist"
			>
			
                       <TableRow
                            android:id="@+id/utablelistrow"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <TextView
                                android:id="@+id/countunitid" android:text="#"
                                android:layout_weight="1" 
                                android:textColor="#00ff00" 
                                 android:gravity="left"/>
                            <TextView
                                android:id="@+id/uName" android:text="Name"
                                android:layout_weight="1" 
                                android:textColor="#00ff00" 
                                 android:gravity="center_horizontal"/>
                          
                             <TextView
                                android:id="@+id/uStatus" android:text="Type"
                                android:layout_weight="1" 
                                android:textColor="#00ff00" 
                                android:gravity="center_horizontal"/>
								<TextView
                                android:id="@+id/uRent" android:text="Rent"
                                android:layout_weight="1" 
                                android:textColor="#00ff00" 
                                android:gravity="right"/>
                        </TableRow>
      </TableLayout>
	  </LinearLayout>