<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="REGISTER ACCOUNT"/>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_top">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="6dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:layout_margin="3dp">
                    <TableRow android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ProgressBar
                                android:id="@+id/progressBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </TableRow>

                    <TableRow android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:text="ID/Passport:" />

                            <EditText
                                android:id="@+id/etID"
                                android:layout_width="225dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:background="@android:drawable/editbox_dropdown_light_frame" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:text="Telephone No:" />

                            <EditText
                                android:id="@+id/etTel"
                                android:layout_width="225dp"
                                android:layout_height="match_parent"
                                android:inputType="phone"
                                android:background="@android:drawable/editbox_dropdown_light_frame"/>
                        </LinearLayout>
                    </TableRow>
                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:text="Names:" />

                            <EditText
                                android:id="@+id/etnames"
                                android:layout_width="225dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:background="@android:drawable/editbox_dropdown_light_frame"/>
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:text="Adress:" />

                            <EditText
                                android:id="@+id/etAddress"
                                android:layout_width="225dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:background="@android:drawable/editbox_dropdown_light_frame"/>
                        </LinearLayout>
                    </TableRow>

                    <TableRow>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/ownertypetxt"
                                android:layout_width="115dp"
                                android:layout_height="match_parent"
                                android:text="Owner Type:" />
                            <Spinner
                                android:id="@+id/ownertype"
                                android:layout_width="225dp"
                                android:layout_height="match_parent"
                                android:layout_alignBottom="@+id/ownertypetxt"
                                android:layout_toRightOf="@+id/ownertypetxt"
                                android:background="@android:drawable/editbox_dropdown_light_frame"
                                />


                        </LinearLayout>
                    </TableRow>


                    <TableRow
                        android:layout_marginTop="0dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="16sp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btsubmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="Submit"
                                android:background="@drawable/mybutton"/>

                            <Button
                                android:id="@+id/btclose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_margin="2dp"
                                android:text="Exit"
                                android:background="@drawable/mybutton"/>

                            <Button
                                android:id="@+id/btnreset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:text="Back"
                                android:background="@drawable/mybutton"/>

                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="22sp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textinfor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="After Registering, email chepken@gmail.com or SMS 0754 191 441 for more guidance" />



                        </LinearLayout>

                    </TableRow>
                    <TableRow
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="22sp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textlogin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="Already have an account? Login." />

                        </LinearLayout>

                    </TableRow>
                </TableLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
